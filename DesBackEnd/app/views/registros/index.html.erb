<div align="center" class="h1">
  <h1 class="h1">TODOS OS REGISTROS</h1>
</div>

<p id="notice"><%= notice %></p>

<div align="center" class="h1">
  <h1 class="h1">Processos</h1>
</div>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Situação</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @processos.each do |processo| %>
      <tr>
        <td><%= processo.nome %></td>
        <td><%= processo.descricao %></td>
        <td><%= processo.situacao %></td>
        <td><%= processo.status %></td>
        <td><%= link_to 'Mostrar', processo, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_processo_path(processo), class: "btn btn-warning" %></td>
        <td><%= link_to 'Apagar', processo, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<p id="notice"><%= notice %></p>

<div align="center" class="h1">
  <h1 class="h1">Clientes</h1>
</div>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
  <tr>
    <th>CNPJ</th>
    <th>Razão Social</th>
    <th>Numero Funcionarios</th>
    <th>Processo</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cnpj %></td>
        <td><%= cliente.razao_social %></td>
        <td><%= cliente.num_funcionarios %></td>
        <td><%= cliente.processo.descricao %></td>
        <td><%= cliente.status %></td>
        <td><%= link_to 'Mostrar', cliente, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente), class: "btn btn-warning" %></td>
        <td><%= link_to 'Apagar', cliente, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<div align="center">
  <%= link_to 'Home', home_index_path, class: "btn btn-primary" %>
</div>

